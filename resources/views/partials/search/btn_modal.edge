<div x-data="{open: false}">
  @ui.button({"@click": "$refs.dialog.showModal(); open = true", variant: 'ghost'})
    @svg('heroicons:magnifying-glass')
  @end
  <dialog
    @click.self="if(open){ $refs.dialog.close(); open = false;}"
    class="backdrop:bg-background/80 backdrop:backdrop-blur-sm w-full md:max-w-[600px] lg:min-w-[900px] max-w-2xl gap-4 border bg-background p-6 shadow-lg duration-200"
    x-ref="dialog"
  >
    @include('partials/search/form')
  </dialog>
</div>

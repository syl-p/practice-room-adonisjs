@layout()
  <form action="{{ route('exercise.addToPractice', {id: exercise.id}) }}" method="POST">
    {{ csrfField() }}
    <input type="hidden" name="duration" value="600" />
    @ui.button({type: "submit"})
      Pratiquer !
    @end
  </form>
  <hr />
  <h1 class="text-xl font-bold">
    {{ exercise.title }}
  </h1>
  {{ exercise.content }}
  <hr />
  <h2>
    Comments:
  </h2>
  <ul>
    @each(comment in comments)
      <li>
        @!comments.comment({comment})
      </li>
    @end
  </ul>
@end
